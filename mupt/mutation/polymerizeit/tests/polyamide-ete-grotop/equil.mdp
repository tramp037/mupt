; integrator
integrator          =   md

; simulation time
nsteps              =   50000
dt                  =   0.002

; output control
nstxout             =   0
nstvout             =   0
nstfout             =   0
nstlog              =   2500
nstenergy           =   2500
nstxout-compressed  =   2500

; PBC and cutoffs
pbc                 =   xyz
rvdw                =   1.0
rcoulomb            =   1.0
vdwtype             =   Cut-off
coulombtype         =   PME
DispCorr            =   EnerPres

; temperature coupling
tcoupl              =   V-rescale
tc-grps             =   System
tau_t               =   0.1
ref_t               =   298.15

; velocity generation
gen-vel             =   yes
gen-temp            =   298.15
gen-seed            =   -1

; constraints
constraints         =   h-bonds
constraint_algorithm=   lincs
